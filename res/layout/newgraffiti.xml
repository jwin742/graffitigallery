<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imgPreview"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Preview of Graffiti Image"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gRating"
        android:layout_weight="00"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="#ffffffff"
        android:inputType="text"
        android:maxLines="1"
        android:layout_weight="0.05"
        android:editable="true"
        android:paddingLeft="5dp"
        android:hint="Name This Graffiti"
        android:textColor="#ff000000"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artistName"
        android:layout_margin="10dp"
        android:background="#ffffffff"
        android:layout_weight="0.05"
        android:hint="Artist Name"
        android:inputType="text"
        android:maxLines="1"
        android:editable="true"
        android:paddingLeft="5dp"
        android:textColor="#ff000000"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Graffiti!"
        android:id="@+id/addG"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:layout_margin="10dp"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:onClick="addGraffiti"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/networkProg"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>
</LinearLayout>